<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqu.springboot.demo.dao.AuthorityDao">

    <resultMap type="com.cqu.springboot.demo.entity.Authority" id="AuthorityMap">
        <result property="authorityId" column="authority_id" jdbcType="INTEGER"/>
        <result property="authorityName" column="authority_name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AuthorityMap">
        select
          authority_id, authority_name
        from doc.authority
        where authority_id = #{authorityId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AuthorityMap">
        select
          authority_id, authority_name
        from doc.authority
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AuthorityMap">
        select
        authority_id, authority_name
        from doc.authority
        <where>
            <if test="authorityId != null">
                and authority_id = #{authorityId}
            </if>
            <if test="authorityName != null and authorityName != ''">
                and authority_name = #{authorityName}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="authorityId" useGeneratedKeys="true">
        insert into doc.authority(authority_name)
        values (#{authorityName})
    </insert>

    <insert id="insertBatch" keyProperty="authorityId" useGeneratedKeys="true">
        insert into doc.authority(authority_name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.authorityName})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="authorityId" useGeneratedKeys="true">
        insert into doc.authority(authority_name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.authorityName})
        </foreach>
        on duplicate key update
        authority_name = values(authority_name)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update doc.authority
        <set>
            <if test="authorityName != null and authorityName != ''">
                authority_name = #{authorityName},
            </if>
        </set>
        where authority_id = #{authorityId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from doc.authority where authority_id = #{authorityId}
    </delete>

</mapper>