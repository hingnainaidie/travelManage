<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqu.springboot.demo.dao.CategoryDao">

    <resultMap type="com.cqu.springboot.demo.entity.Category" id="CategoryMap">
        <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
        <result property="categoryName" column="category_name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CategoryMap">
        select
          category_id, category_name
        from doc.category
        where category_id = #{categoryId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CategoryMap">
        select
          category_id, category_name
        from doc.category
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="CategoryMap">
        select
        category_id, category_name
        from doc.category
        <where>
            <if test="categoryId != null">
                and category_id = #{categoryId}
            </if>
            <if test="categoryName != null and categoryName != ''">
                and category_name = #{categoryName}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="categoryId" useGeneratedKeys="true">
        insert into doc.category(category_name)
        values (#{categoryName})
    </insert>

    <insert id="insertBatch" keyProperty="categoryId" useGeneratedKeys="true">
        insert into doc.category(category_name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.categoryName})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="categoryId" useGeneratedKeys="true">
        insert into doc.category(category_name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.categoryName})
        </foreach>
        on duplicate key update
        category_name = values(category_name)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update doc.category
        <set>
            <if test="categoryName != null and categoryName != ''">
                category_name = #{categoryName},
            </if>
        </set>
        where category_id = #{categoryId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from doc.category where category_id = #{categoryId}
    </delete>

    <!--查询文档图表需要的数据-->
    <select id="getCategoryEChartsData" resultType="com.cqu.springboot.demo.vo.CategoryEChartsVo">
        SELECT category.category_name categoryName, COUNT(1) categoryCount FROM category,doc
        WHERE category.category_id = doc.category_id
        GROUP BY category.category_id
    </select>

</mapper>